<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game"
    android:orientation="vertical"
    tools:context=".Start_Game">

    <TextView
        android:id="@+id/tvWhack"
        android:layout_width="365dp"
        android:layout_height="86dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="WHACK"
        android:textAlignment="center"
        android:textColor="#FF9800"
        android:textSize="70sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvAMole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=" A MOLE"
        android:textAlignment="center"
        android:textColor="#FF9800"
        android:textSize="70sp"
        android:textStyle="bold"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/imgHo"
            android:layout_width="wrap_content"
            android:layout_height="245dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-21dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/ho_10_demo"/>

        <ImageView
            android:id="@+id/imgChuot"
            android:layout_width="382dp"
            android:layout_height="207dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-8dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/chuot_chui_4"/>

        <ImageView
            android:id="@+id/imgBua"
            android:layout_width="190dp"
            android:layout_height="119dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="198dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/bua_1_demo"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btnPlay"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:backgroundTint="#FFB74D"
        android:text="Play"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnTutorial"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#03A9F4"
        android:text="Tutorial"
        android:textSize="30sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
    </RelativeLayout>
    <TextView
        android:id="@+id/tvPricacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_underlined"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:textStyle="bold"/>
<!--        android:textDecorationLine="underline"/>-->
</LinearLayout>