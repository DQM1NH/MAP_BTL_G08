<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="NamespaceTypo">

    <!-- Ảnh nền -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <!-- Icon home - góc trái trên -->
    <ImageView
        android:id="@+id/img_home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/home1"
        android:layout_gravity="top|left" />

    <!-- Icon loa - góc phải trên -->
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/loa"
        android:layout_gravity="top|right" />

    <!-- Icon x - góc phải trên, cách lề phải 100dp -->
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/x"
        android:layout_marginRight="100dp"
        android:layout_gravity="top|right" />

    <!-- Tiêu đề game -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Game Đập Chuột"
        android:textColor="#493005"
        android:layout_marginBottom="250dp"
        android:typeface="serif"
        android:textStyle="bold|italic"
        android:textSize="40dp" />

    <!-- FrameLayout cho nội dung chính -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="563dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp">

        <!-- Ảnh bảng -->
        <ImageView
            android:layout_width="800dp"
            android:layout_height="1000dp"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bang" />

        <!-- LinearLayout cho các nút/bảng điều khiển -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <!-- Chuột thường: Ảnh + Text -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/chuotnormal"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chuột Thường"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+10 điểm"
                    android:textColor="#4CAF50"
                    android:textSize="20dp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Chuột trắng: Ảnh + Text -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/chuotwhite"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chuột Trắng"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+20 điểm"
                    android:textColor="#F44336"
                    android:textSize="20dp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Chuột vàng: Ảnh + Text -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@drawable/chuotyellow"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chuột Vàng"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+50 điểm"
                    android:textColor="#6B4C1E"
                    android:textSize="20dp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- LINEARLAYOUT HORIZONTAL MỚI - THÊM VÀO ĐÂY -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:padding="16dp">

            <!-- Nút Start Game -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:src="@drawable/boom"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-100"
                    android:textSize="30sp"
                    android:textColor="#FF0000"
                    android:layout_gravity="center"
                    android:layout_marginTop="-45dp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <!-- Nút Cài Đặt -->
            <Button
                android:id="@+id/btn_continue"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/bgbutton"
                android:text="Continue"/>
        </LinearLayout>

    </FrameLayout>

</FrameLayout>