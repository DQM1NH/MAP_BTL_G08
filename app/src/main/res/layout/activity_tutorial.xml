<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81D4FA"
    android:gravity="center"
    tools:context=".Tutorial">
    <LinearLayout
        android:id="@+id/tutorialContainer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_privacy_border"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:elevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_title_privacy"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Tutorial"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/btn_dialog"
                android:contentDescription="Close" />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_content_box"
            android:padding="10dp">

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hướng dẫn trò chơi"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="24sp" />
        </ScrollView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_content_box"
            android:padding="10dp">
            <TextView
                android:id="@+id/tvHuongDan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Người chơi sử dụng búa để đập chuột nhô lên khỏi miệng hang. Người chơi cố gắng thực hiện đập nhiều chuột nhâất trong khoảng thời gian 60 giây. Hết thời gian lượt chơi sẽ kết thúc. Trong quá trình chơi cần tránh đập phải boom, nếu không lượt chơi sẽ kết thúc ngay lập tức"
                android:textColor="@color/black"
                android:textSize="20dp"
                />

        </ScrollView>

    </LinearLayout>

</RelativeLayout>