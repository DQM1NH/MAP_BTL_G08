<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_game"
    tools:ignore="NamespaceTypo">


    <TextView
        android:id="@+id/tv_space"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/tv_Tutorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hướng dẫn trò chơi"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_mole"
                    android:layout_width="225dp"
                    android:layout_height="125dp"
                    app:srcCompat="@drawable/ic_mole" />

                <TextView
                    android:id="@+id/tv_Chuot_nau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chuột nâu"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_Diem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 điểm"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_mole_2"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:srcCompat="@drawable/ic_mole_2" />

                <TextView
                    android:id="@+id/tv_Chuot_trang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chuột trắng"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+2 điểm"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_mole_3"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_mole_3" />

                <TextView
                    android:id="@+id/tv_Chuot_vang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chuột vàng"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_Diem_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+ 5 điểm"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_boom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_bomb" />

                <TextView
                    android:id="@+id/tv_Boom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Boom"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_Diem_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- 10 điểm"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_Exit"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:text="Quay lại"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>


    </LinearLayout>

</LinearLayout>